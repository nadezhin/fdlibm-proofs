<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <action>
        <actionName>run</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
        </goals>
        <properties>
            <exec.args>-ea -classpath %classpath jdkproofs.llvm2acl2.DumpACL2Steps</exec.args>
            <exec.executable>java</exec.executable>
        </properties>
    </action>
    <action>
        <actionName>debug</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.4.0:exec</goal>
        </goals>
        <properties>
            <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -ea -classpath %classpath jdkproofs.llvm2acl2.DumpACL2Steps</exec.args>
            <exec.executable>java</exec.executable>
            <jpda.listen>true</jpda.listen>
            <Env.LLVM_HOME>/usr/lib/llvm-3.7</Env.LLVM_HOME>
            <Env.LANG>CC</Env.LANG>
        </properties>
    </action>
    <action>
        <actionName>profile</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
        </goals>
        <properties>
            <exec.args>-ea -classpath %classpath jdkproofs.llvm2acl2.DumpACL2Steps</exec.args>
            <exec.executable>java</exec.executable>
        </properties>
    </action>
</actions>
